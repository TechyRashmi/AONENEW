<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/cart_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_black"
                android:layout_margin="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Order Items:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/llParentview"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rectangle_black"
                android:layout_margin="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Order Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text="Order Id:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text=" "
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text="Order Placed On:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="@dimen/_2sdp"
                        android:id="@+id/tvOrderDate"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"

                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text="Order Total:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:paddingLeft="@dimen/_2sdp"
                        android:id="@+id/tvOrderTotal"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llView"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawablePadding="@dimen/_2sdp"
                        android:drawableRight="@drawable/ic_baseline_info_24"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/red_800"
                        android:text="View order Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:paddingLeft="@dimen/_2sdp"
                        android:id="@+id/tvProductname"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/myblack"
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rectangle_black"
                android:layout_margin="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Shipping Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text="Shop name:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="@dimen/_2sdp"
                        android:id="@+id/tvShopName"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvAddress"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:maxLines="2"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text="Mobile Number:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="@dimen/_2sdp"
                        android:id="@+id/tvPhone"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/myblack"
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/rectangle_black"
                android:layout_margin="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">


                <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Payment mode:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvPaymentMode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <ImageView
                android:id="@+id/ivShare"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/whatsappshare"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
