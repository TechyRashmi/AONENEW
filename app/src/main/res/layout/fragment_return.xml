<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="gowardhanfragments.AllotedFragment">

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:background="@color/red_800"
            android:outlineProvider="bounds"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:text="Product"
                android:gravity="center"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:text="Size"
                android:gravity="center"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:text="Qty"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:text="Used"
                android:gravity="center"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:text="Left"
                android:gravity="center"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerVertical="true"
            android:id="@+id/recyclerView"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            />
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Remarks"
            android:textColor="@color/red_900"
            android:textSize="@dimen/_12sdp" />
        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/rectangle_black">
            <EditText

                android:id="@+id/etRemark"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@null"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:gravity="top|left"
                android:textColorHint="@color/black_trans"
                android:textColor="@color/black"
                android:hint=""
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentTop="true"
                />




        </RelativeLayout>

        <Button
            android:backgroundTint="@color/red_600"
            android:text="Return Items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_margin="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />

        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/green_600"
            android:text="Return Requested"
            android:textSize="@dimen/_14sdp"
            android:layout_margin="@dimen/_20sdp"
            android:id="@+id/tvReturnStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>

    </LinearLayout>
</ScrollView>




</LinearLayout>