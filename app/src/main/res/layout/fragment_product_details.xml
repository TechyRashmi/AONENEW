<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llmain"
    android:background="@color/grey_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ghee"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="left"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/ivProductImage"
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:text="Gowardhan Ghee"
                    android:textColor="@color/black"/>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             "

                    />
                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="left"
                    android:layout_below="@+id/tvProductName"
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:text="\u20b9 500"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />


            </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Select Size"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/_13sdp"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:backgroundTint="@color/green_500"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/timecapsule"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp">

                    <TextView

                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="100 gm"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout> <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/timecapsule"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp">

                <TextView
                    android:id="@+id/tvTime"
                    android:textStyle="bold"
                    android:textColor="@color/blue_900"
                    android:layout_centerInParent="true"
                    android:text="200 gm"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="About the product"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/_13sdp"
                />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="4dp"
                android:padding="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Gowardhan ghee, untouched by hand in the manufacturing process, is great in taste &amp; made from 100% pure cow's milk. It has won the accolade of ‘Most Trusted Ghee Brand’."
                android:textColor="@color/myblack"
                android:textSize="@dimen/_12sdp"
                />




        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:elevation="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_50"
            android:gravity="center"
            android:text="Add to Cart"

            android:textColor="@color/black"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvBuynow"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
          android:background="@drawable/gradient"
             android:gravity="center"
            android:text="Buy Now"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
