<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llMain"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:weightSum="2.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp">
        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                >

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ghee" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/tvProductName"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_3sdp"
                android:text="Gowardhan ghee"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_3sdp" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="order generated on 22-12-2020"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/_9sdp"
                />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/tvAdvancePayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="Advance: \u20B9320"
                        android:textColor="@color/green_700"
                        android:textSize="@dimen/_10sdp"
                        />






                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tvPendingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="Pending: \u20B9 620"
                    android:textColor="@color/red_800"
                    android:textSize="@dimen/_10sdp"
                    />


            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSubmit"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Deliver Now"
            android:background="@drawable/capsulebutton"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/grey_300"/>

</LinearLayout>
